  "version": "0.2.0",
  "configurations": [
    {
      "name": "Day 03 - .NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/03/bin/Debug/net5.0/03.exe",
      "args": [],
      "cwd": "${workspaceFolder}/03",
      "stopAtEntry": false,
      "console": "internalConsole"
    },

    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\01\\src\\main01.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "cwd": "${workspaceFolder}\\01\\dist"
    }
  ]
}
